<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/koolcolor_white"
    tools:context="com.koolpos.mobiledevdemo.MainActivity" >

    <TextView
        android:id="@+id/tvContentTitle"
        style="@style/TvTitleStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_240_72dp"
        android:gravity="center"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/btnBackward"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_backward" />

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvContentTitle"
        android:background="@color/koolcolor_white" >
    </FrameLayout>

</RelativeLayout>