<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"

    >
    <!-- android:layout_height="73dp"-->
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="95dp"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/juan_bg3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥"
                        android:textColor="#f93369"
                        android:textSize="23sp" />

                    <TextView
                        android:id="@+id/tv_youhui_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:singleLine="true"
                        android:textColor="#f93369"
                        android:textSize="50sp" />
                </LinearLayout>
                <!--使用条件-->
                   <!-- android:layout_marginTop="-5dp"-->
                <TextView
                    android:id="@+id/tv_manjian_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="满30元立减"
                    android:textColor="#55000000"
                    android:textSize="13sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linerSelect"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3">

            <!--优惠券种类-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textStyle="bold"
                    android:text="生鲜水果超市"
                    android:textColor="#f93369"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="限"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/tv_time_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2018.11.31"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="前"
                        android:textSize="11sp" />

                </LinearLayout>
                <Button
                    android:clickable="false"
                    android:id="@+id/btn_now_use"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/shape_new_use"
                    android:gravity="center"
                    android:text="进店使用"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Button
                    android:clickable="false"
                    android:id="@+id/btn_now_get"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/shape_new_use"
                    android:gravity="center"
                    android:text="点击领取"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:visibility="visible" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_lable3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="繁城都市县程序长期9折"
                    android:padding="3dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/lable_2"
                    android:textColor="#ff7330"
                    android:textSize="11sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>